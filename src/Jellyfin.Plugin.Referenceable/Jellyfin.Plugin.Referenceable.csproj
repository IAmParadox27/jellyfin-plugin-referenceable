<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
        <IncludePackageReferencesDuringMarkupCompilation>true</IncludePackageReferencesDuringMarkupCompilation>
    </PropertyGroup>

<!--    <ItemGroup>-->
<!--      <ProjectReference Include="..\..\jellyfin-plugin-common\Jellyfin.Plugin.Common\Jellyfin.Plugin.Common.csproj" />-->
<!--    </ItemGroup>-->

    <ItemGroup>
      <Reference Include="Emby.Server.Implementations">
        <HintPath>C:\Program Files\Jellyfin\Server\Emby.Server.Implementations.dll</HintPath>
      </Reference>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Jellyfin.Controller" Version="10.10.3" />
      <PackageReference Include="Microsoft.CodeAnalysis.Common" Version="4.12.0" PrivateAssets="all" />
      <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.12.0" PrivateAssets="all" />

      <PackageReference Include="MSBuildTasks" Version="1.5.0.235">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>

      <PackageReference Include="Jellyfin.Model" Version="10.10.3" />
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="ModuleInitializer.cs" />
      
      <None Include="Jellyfin.Plugin.Referenceable.targets" Pack="true" PackagePath="build/net8.0" />
      <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="GeneratorTemplates\ModuleInitializer.cs" />
      <Compile Remove="GeneratorTemplates\ModuleInitializer.cs" />
      <EmbeddedResource Include="GeneratorTemplates\ServiceRegistrator.cs" />
      <Compile Remove="GeneratorTemplates\ServiceRegistrator.cs" />
    </ItemGroup>
    
    <Target Name="NuGetOutputCopy" AfterTargets="Pack">
        <Exec Command="copy $(OutDir)..\$(ProjectName).*.nupkg $(SolutionDir)nuget-packages\" />
    </Target>

</Project>
